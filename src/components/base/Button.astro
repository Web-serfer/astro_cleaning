---
import { Icon } from 'astro-icon/components';

interface Props {
    href?: string
    text?: string
    class?: string
    isModalButton?: boolean
    onclick?: string
}

const {
    href = '#',
    text = 'BOOK NOW',
    class: className,
    isModalButton = false,
    onclick,
} = Astro.props

const _buttonClass = `book-button inline-flex items-center justify-center ${className || ''}`
---

{isModalButton ? (
<button
        class={_buttonClass}
>
    <Icon name="bounding-box" class="icon flex-shrink-0" />
    <span class="flex-shrink-0 text-offset">{text}</span>
</button>
    ) : onclick ? (
<button
        onclick={onclick}
        class={_buttonClass}
>
    <Icon name="bounding-box" class="icon flex-shrink-0" />
    <span class="flex-shrink-0 text-offset">{text}</span>
</button>
    ) : (
<a href={href} class={_buttonClass}>
    <Icon name="bounding-box" class="icon flex-shrink-0" />
    <span class="flex-shrink-0 text-offset">{text}</span>
</a>
    )}

<style>
    .book-button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;

        /* Внешний вид */
        background-color: var(--primary);
        color: #ffffff;
        border: none;
        border-radius: 50px;
        padding: 16px 24px;

        /* Стили текста */
        font-family: 'Chillax', system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        font-size: 1.1rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;

        text-decoration: none;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;

        /* Улучшенное центрирование */
        box-sizing: border-box;
        line-height: 1;
    }

    .book-button:hover {
        background-color: var(--primary-hover);
        transform: translateY(-2px);
    }

    .text-offset {
        transform: translateY(2px);
    }
</style>