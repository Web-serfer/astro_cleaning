---
import { Icon } from 'astro-icon/components';

interface Props {
  href?: string
  text?: string
  class?: string
  isModalButton?: boolean
  onclick?: string
}

const {
  href = '#',
  text = 'BOOK NOW',
  class: className,
  isModalButton = false,
  onclick,
} = Astro.props

const _buttonClass = `book-button inline-flex items-center justify-center ${className || ''}`
---

{isModalButton ? (
    <button 
        onclick="openModal()" 
        class={_buttonClass}
    >
        <Icon name="bounding-box" class="icon" />
        <span>{text}</span>
    </button>
) : onclick ? (
    <button
        onclick={onclick}
        class={_buttonClass}
    >
        <Icon name="bounding-box" class="icon" />
        <span>{text}</span>
    </button>
) : (
    <a href={href} class={_buttonClass}>
        <Icon name="bounding-box" class="icon" />
        <span>{text}</span>
    </a>
)}

<style>
    .book-button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;

        /* Внешний вид */
        background-color: var(--primary);
        color: #ffffff;
        border: none;
        border-radius: 50px;
        padding: var(--space-16) var(--space-24);

        /* Стили текста */
        font-family: 'Chillax', system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        font-size: 1.1rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;

        text-decoration: none;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .book-button:hover {
        background-color: var(--primary-hover);
        transform: translateY(-2px);
    }
</style>