---
interface Props {
  title?: string
  subtitle?: string
  bgColor: string
  textColor: string
}

const { title, subtitle, bgColor, textColor } = Astro.props
---

<div
        class="
    font-sans rounded-3xl p-6 py-8 min-h-[220px]
    flex flex-col justify-center items-center text-center
    transition-transform duration-200 ease-in-out hover:-translate-y-1
  "
        style={`background-color: ${bgColor}; color: ${textColor};`}
>
    <slot />

    {title && (
        <h3
                class="text-[1.75rem] leading-[1.2] font-medium"
                set:html={title}
        />
    )}
    {subtitle && (
        <p class="mt-3 text-[0.8rem] font-medium uppercase tracking-wider">
            {subtitle}
        </p>
    )}
</div>
