---
import SectionHeader from '../../base/SectionHeader.astro';
import ServiceAreaMap from './ServiceAreaMap.astro';
import ZipCodeChecker from './ZipCodeChecker.astro';
import LocationList from './LocationList.astro';

// Данные для заголовка
const sectionTitle = "We Serve Philadelphia + South Jersey";
const sectionCategory = "Services area";
const sectionDescription = "Lorem ipsum dolor sit amet consectetur. Turpis pellentesque pellentesque tristique condimentum nulla eget. Tincidunt et vel ultrices egestas viverra consequat neque aliquet vulputate.";

// Данные для списков можно вынести сюда для удобства
const popularNeighborhoods = ["Center City", "Fishtown", "South Philly", "Manayunk", "Old City", "University City", "Fairmount"];
const popularSuburbs = ["Main Line", "Upper Darby", "Abington", "Cherry Hill", "Collingswood"];
const southJerseyAreas = ["Marlton"];
---

<section class="section section-gap">
    <div class="container mx-auto">
        <SectionHeader 
            title={sectionTitle}
            category={sectionCategory}
            description={sectionDescription}
        />
        
        <div class="grid grid-cols-1 lg:grid-cols-3 lg:gap-8 items-start mt-8">
            <!-- левая секция-->
            <div class="lg:col-span-2">
                <ServiceAreaMap />
            </div>

            <!-- правая секция-->
            <div class="lg:col-span-1 mt-10">
                <!-- Проверка почтового индекса -->
                <ZipCodeChecker />

                <!-- Популярные места -->
                <div class="space-y-6">
                    <!-- Список популярных районов -->
                    <LocationList
                        title="Popular Neighborhoods We Serve"
                        locations={popularNeighborhoods}
                    />
                    <!-- Список популярных пригородов -->
                    <LocationList
                        title="Popular Suburbs We Serve"
                        locations={popularSuburbs}
                    />
                    <!-- Список популярных районов южного Нью-Джерси -->
                    <LocationList
                        title="Popular South Jersey Areas We Serve"
                        locations={southJerseyAreas}
                    />
                </div>
            </div>
        </div>
    </div>
</section>
