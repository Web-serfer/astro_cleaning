---
import { featureCardsData } from './featureCardsData';
import FeatureCard from './FeatureCard.astro';
import PhoneMockup from './PhoneMockup.astro';

// Данные для списка "таблеток"
const tabletListData = [
    "Refillable bottles",
    "Microfiber system", 
    "Fragrance-free options"
];
---

<section class="section section-gap h-[509px]">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
            <!-- Левая колонка: (50% ширины) -->
            <div class="lg:col-span-6 flex flex-col justify-center">
                <div class="max-w-lg">
                    <!-- заголовок -->
                    <div class="flex flex-col gap-2 mb-6">
                        <div class="flex items-center">
                            <div class="w-4 h-4 bg-[#F1F0F9] mr-2"></div>
                            <p class="text-sm uppercase tracking-wider text-zinc-500">
                                ABOUT US
                            </p>
                        </div>

                        <!-- Основной заголовок -->
                        <h2 class="text-2xl sm:text-3xl md:text-4xl font-semibold text-slate-900 leading-tight">
                            About<br class="hidden md:block" />
                            WellKnown<br class="hidden md:block" />
                            Cleaning
                        </h2>
                    </div>

                    <!-- Описание -->
                    <p class="text-slate-600 text-base md:text-lg max-w-sm mb-6">
                        Our mission is to provide an exceptional clean that's safe for your family and the environment. We use modern techniques and eco-friendly products to ensure your space is not just spotless, but also healthy and welcoming.
                    </p>

                    <!-- Список в виде "таблеток" -->
                    <div class="flex flex-col items-start gap-2">
                        {tabletListData.map(item => (
                            <span class="px-4 py-2 border border-[#4E46B4] rounded-full text-sm text-slate-700">
                                {item}
                            </span>
                        ))}
                    </div>
                </div>
            </div>

            <!-- Правая колонка: (50% ширины) -->
            <div class="lg:col-span-6">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 h-full items-stretch">
                    <div class="lg:col-span-1">
                        <!--  карточки -->
                        <div class="grid grid-rows-3 gap-8 h-full place-items-end">
                            {featureCardsData.map(card => (
                                <FeatureCard title={card.title} description={card.description} />
                            ))}
                        </div>
                    </div>

                    <!-- макет телефона -->
                    <div class="lg:col-span-1">
                        <PhoneMockup />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>