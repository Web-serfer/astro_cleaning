---
import { Image } from 'astro:assets';
import phoneImg from '../../../assets/home/about/phoneImg.png';
---

<div class="bg-[#F1F0F9] rounded-3xl p-4 lg:p-6 w-full max-w-sm mx-auto h-full flex flex-col">

    <!-- Этот блок (экран) теперь будет расти, чтобы заполнить доступное пространство -->
    <div class="bg-teal-100/50 rounded-2xl aspect-[9/16] flex items-center justify-center flex-grow">
        <!-- Моковая картинка -->
        <Image 
            src={phoneImg} 
            alt="Phone display" 
            class="w-full h-full object-cover rounded-xl"
        />
    </div>

    <!-- Этот блок (кнопки) -->
    <div class="flex justify-center items-center gap-4 mt-4">
        <div class="w-[72px] h-[72px] bg-white rounded-full"></div>
        <div class="w-[72px] h-[72px] bg-white rounded-full"></div>
        <div class="w-[72px] h-[72px] bg-white rounded-full"></div>
    </div>
</div>