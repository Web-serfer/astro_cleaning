---
import TestimonialCard from "./TestimonialCard.astro";
import { testimonialsData } from './testimonialsData';

const testimonials = testimonialsData;
---

<section class="section section-gap">
    <div class="container">
        {/* Заголовок секции */}
        <div class="max-w-3xl">
            <div class="flex flex-col items-center md:flex-row md:justify-between md:items-center my-2 text-center md:text-left">
                <div class="flex items-center">
                    <div class="w-4 h-4 bg-[#F1F0F9] mr-2"></div>
                    <p class="mt-0.5 text-sm uppercase tracking-wider text-zinc-500">
                        reviews
                    </p>
                </div>
            </div>
            <h2 class="text-2xl sm:text-3xl md:text-4xl font-semibold text-zinc-900 mb-8 text-center md:text-left">
                Testimonials
            </h2>
        </div>

        <!-- Контейнер карточек -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {testimonials.map(testimonial => (
                <TestimonialCard quote={testimonial.quote} author={testimonial.author} rating={testimonial.rating} />
            ))}
        </div>
    </div>
</section>