---
interface TestimonialProps {
    quote: string;
    author: string;
    rating: number;
}

const { quote, author, rating } = Astro.props;
---

<!-- Основной контейнер карточки -->
<div class="bg-white rounded-3xl border border-gray-300 p-6 flex flex-col gap-4 h-full">

    <!-- Блок с аватаром и звездами -->
    <div class="flex items-start gap-3">
        <!-- Черный круг вместо сложного аватара -->
        <div class="w-12 h-12 bg-black rounded-full flex-shrink-0"></div>
        <div class="flex flex-col flex-grow">
            <div class="flex items-center gap-0.5 mb-2">
                {Array.from({ length: 5 }).map((_, index) => (
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="21"
                        height="21"
                        viewBox="0 0 24 24"
                        fill={index < rating ? 'black' : 'none'}
                        stroke="black"
                        stroke-width="1.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" />
                    </svg>
                ))}
            </div>
            <blockquote class="text-gray-800 text-base leading-relaxed">
                "{quote}"
            </blockquote>
        </div>
    </div>
    <div class="ml-[56px]">
        <p class="text-sm text-gray-600 font-semibold">{author}</p>
    </div>
</div>