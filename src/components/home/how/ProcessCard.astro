---
interface Props {
    title: string;
    text: string;
    className?: string;
    hasBar?: boolean;
}

const { title, text, className, hasBar = false } = Astro.props;
---

<div class:list={["bg-violet-50 p-6 rounded-2xl shadow-sm", className]}>
    {hasBar && (
            <div class="w-12 h-1.5 bg-gray-400 rounded-full mb-4"></div>
    )}
    <h3 class="font-bold text-gray-900 mb-2">{title}</h3>
    <p class="text-gray-700 text-sm leading-relaxed">
        {text}
    </p>
</div>