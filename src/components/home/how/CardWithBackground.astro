---
import { Image } from 'astro:assets';
import howItWorkImage from '@assets/home/how/howItWorl.png';

interface Props {
    title: string;
    text: string;
    }

const { title, text } = Astro.props;
---
<div class="relative min-h-[480px] h-full rounded-3xl overflow-hidden bg-gray-200">
    <Image
            src={howItWorkImage}
            alt="Cleaning process"
            class="absolute inset-0 w-full h-full object-cover"
    />

    <div class="absolute bottom-4 right-4 left-4 md:left-auto md:w-11/12 max-w-md z-10">
        <div class="bg-slate-50/95 backdrop-blur-sm border border-slate-200 p-4 rounded-2xl shadow-sm text-left">
            <h3 class="text-lg font-bold text-black mb-2">{title}</h3>
            <p class="text-gray-700 leading-relaxed text-sm">{text}</p>
        </div>
    </div>
</div>