---
import { Image } from 'astro:assets';
import howItWorkImage from '@assets/home/how/howItWorl.png';

interface Props {
    title: string;
    text: string;
    }

const { title, text } = Astro.props;
---
<div class="relative min-h-[480px] h-full rounded-[48px] overflow-hidden bg-gray-200">
    <Image
            src={howItWorkImage}
            alt="Cleaning process"
            class="absolute inset-0 w-full h-full object-cover"
    />

    <div class="absolute bottom-4 right-4 z-10">
        <div class="w-[221px] h-[220px] bg-[#F1F0F9] border border-slate-200 rounded-[24px] p-6 shadow-sm text-left flex flex-col justify-center">
            <h3 class="text-lg font-bold text-black mb-1">{title}</h3>
            <p class="text-gray-700 leading-relaxed text-sm">{text}</p>
        </div>
    </div>
</div>