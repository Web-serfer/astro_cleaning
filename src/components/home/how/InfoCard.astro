---
interface Props {
    title: string;
    text: string;
    className?: string;
    }

const { title, text, className } = Astro.props;
---
<div class:list={[className]} class="flex flex-col justify-center h-full">
    <h3 class="text-lg font-bold text-black mb-2">{title}</h3>
    <p class="text-gray-700 leading-relaxed text-sm">{text}</p>
</div>