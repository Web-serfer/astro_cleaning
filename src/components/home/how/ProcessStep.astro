---
interface Props {
    number: string;
    title: string;
    description: string;
}

const { number, title, description } = Astro.props;
---
<div class="flex justify-between items-center">
    <div class="flex items-center gap-6">
        <span class="text-3xl sm:text-5xl font-bold text-black">{number}</span>
        <span class="text-xl sm:text-3xl font-semibold text-black m-0 pl-25">{title}</span>
    </div>
    <p class="text-gray-700 text-right m-0 text-sm sm:text-base pr-25">{description}</p>
</div>