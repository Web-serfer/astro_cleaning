---
interface Props {
    number: string;
    title: string;
    description: string;
}

const { number, title, description } = Astro.props;
---
<div class="flex justify-between items-center">
    <div class="flex items-center gap-6">
        <span class="text-3xl sm:text-5xl font-bold text-black">{number}</span>
        <h3 class="text-xl sm:text-3xl font-bold text-black m-0">{title}</h3>
    </div>
    <p class="text-gray-700 text-right m-0 text-sm sm:text-base">{description}</p>
</div>