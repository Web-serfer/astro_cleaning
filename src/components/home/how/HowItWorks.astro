---
import { Image } from 'astro:assets';
import howItWorkImage from '@assets/home/how/howItWorl.png';
import ProcessList from './ProcessList.astro';
import InfoBlock from './InfoBlock.astro';
---

<section class="bg-white py-16 px-8 h-[780px]">
    <div class="max-w-7xl mx-auto h-full">
        <!-- левая секция -->
        <div class="flex flex-col md:flex-row gap-8 mt-xl h-full">
            <div class="w-full md:w-[calc(100%-405px)] flex flex-col gap-8 order-first md:order-1 h-full">
                <InfoBlock />
                <ProcessList />
            </div>
            <!--правая секция -->
            <div class="w-full md:w-auto flex items-center order-last md:order-2 h-full">
                <Image
                    src={howItWorkImage}
                    alt="Как это работает - изображение"
                    class="h-full object-cover rounded-[48px]"
                    style="width: 405px;"
                />
            </div>
        </div>
    </div>
</section>