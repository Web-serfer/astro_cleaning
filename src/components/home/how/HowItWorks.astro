---
import { Image } from 'astro:assets';
import howItWorkImage from '@assets/home/how/howItWorl.png';
import ProcessList from './ProcessList.astro';
import InfoBlock from './InfoBlock.astro';
---

<section class="bg-white py-16 px-8">
    <div class="max-w-7xl mx-auto">
        <!-- левая секция -->
        <div class="flex flex-col md:flex-row gap-8 mt-xl">
            <div class="w-full md:w-2/3 flex flex-col gap-16 order-first md:order-1">
                <InfoBlock />
                <ProcessList />
            </div>
            <!--правая секция -->
            <div class="w-full md:w-1/3 flex items-center order-last md:order-2">
                <Image
                    src={howItWorkImage}
                    alt="Как это работает - изображение"
                    class="w-full h-full object-cover rounded-2xl"
                />
            </div>
        </div>
    </div>
</section>